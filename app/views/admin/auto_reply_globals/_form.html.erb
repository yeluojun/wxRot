<form class="form-horizontal" id="auto-reply-global-form" enctype="multipart/form-data">
  <div class="form-group">
    <label for="activity_cat_id" class="col-sm-3 col-md-3 col-lg-2 control-label">
      标记
      <span class="symbol required">*</span>
    </label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input class="form-control" name="auto_reply_global[id]" value="<%= @auto_reply_global.id %>" style="display: none">
      <input class="form-control" name="auto_reply_global[flag_string]" value="<%= @auto_reply_global.flag_string %>" placeholder="* 代表任意内容">
    </div>
  </div>
  <div class="form-group">
    <label for="activity_cat_id" class="col-sm-3 col-md-3 col-lg-2 control-label">
      回复内容
      <span class="symbol required">*</span>
    </label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input class="form-control" name="auto_reply_global[content]" value="<%= @auto_reply_global.content %>">
    </div>
  </div>

  <div class="form-group">
    <label for="activity_cat_id" class="col-sm-3 col-md-3 col-lg-2 control-label">
      回复类型
      <span class="symbol required">*</span>
    </label>
    <div class="col-sm-8 col-md-8 col-lg-6">
    <select name="auto_reply_global[flag]" class="form-control">
      <option value="0" <%= @auto_reply_global.flag == 0? 'selected' : '' %>>普通回复</option>
      <option value="1" <%= @auto_reply_global.flag == 1? 'selected' : '' %>>＠回复</option>
    </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-2 col-sm-6">
      <button type="submit" class="btn btn-primary">确定</button>
      <a class="btn btn-danger" href="/admin/weixins/edit?wxuin=<%= @wxuin %>" >取消</a>
    </div>
  </div>
</form>