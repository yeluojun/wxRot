<from class="form-horizontal" id="auto-reply-form">
  <div class="form-group">
    <label for="activity_cat_id" class="col-sm-3 col-md-3 col-lg-2 control-label">
      标记
      <span class="symbol required">*</span>
    </label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input class="form-control" name="id" value="<%= @auto_reply.id %>" style="display: none">
      <input class="form-control" name="flag_string" value="<%= @auto_reply.flag_string %>">
    </div>
  </div>
  <div class="form-group">
    <label for="activity_cat_id" class="col-sm-3 col-md-3 col-lg-2 control-label">
      回复内容
      <span class="symbol required">*</span>
    </label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input class="form-control" name="content" value="<%= @auto_reply.content %>">
    </div>
  </div>
  <div class="form-group">
    <label for="activity_cat_id" class="col-sm-3 col-md-3 col-lg-2 control-label">
      选择用户
      <span class="symbol required">*</span>
    </label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input class="form-control" name="user_str" value="<%= @auto_reply.user_str %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-2 col-sm-6">
      <button type="submit" class="btn btn-primary">确定</button>
      <a class="btn btn-danger" href="/admin/weixins/edit?wxuin=<%= @wxuin %>" >取消</a>
    </div>
  </div>
</from>